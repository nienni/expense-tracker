<div class="container">
  <form action="/records/{{{record._id}}}?_method=PUT" method="POST">

    <div class="col-md-6 m-auto">

      <div class="row mt-5 mb-3">
        <div class="col-4 text-right" style="vertical-align: middle;">＊必填欄位</div>
        <div class="col-8">請修改你的支出</div>

      </div>

      <div class="row form-group">
        <div class="col-4">
          <p class="text-right" style="vertical-align: middle;">名稱:</p>
        </div>
        <div class="col-8"><input type="text" name="name" class="form-control" value="{{{record.name}}}"
            placeholder="{{{record.name}}}"></div>
      </div>

      <div class="row form-group">
        <div class="col-4">
          <p class="text-right" style="vertical-align: middle;">日期:</p>
        </div>
        <div class="col-8"><input type="date" name="date" class="form-control" placeholder="{{{record.date}}}"
            class="textbox-n" onfocus="(this.type='date')"></div>
      </div>

      <div class="row form-group">
        <div class="col-4">
          <p class="text-right" style="vertical-align: middle;">類別:</p>
        </div>
        <div class="col-8">
          <select class="custom-select" name="category" aria-placeholder="{{{record.category}}}">
            <option selected>Select</option>
            <option value="live">家居物業</option>
            <option value="traffic">交通出行</option>
            <option value="entertainment">休閒娛樂</option>
            <option value="eat">餐飲食品</option>
            <option value="other">其他</option>
          </select>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-4">
          <p class="text-right" style="vertical-align: middle;">金額:</p>
        </div>
        <div class="col-8"><input type="number" name="amount" class="form-control" value="{{{record.amount}}}"
            placeholder="{{{record.amount}}}"></div>
      </div>

      <div class="row form-group">
        <div class="col-4"></div>
        <div class="col-8"><button type="submit" class="btn btn-warning btn-block mt-3">送出</button></div>
      </div>

    </div>
  </form>
</div>